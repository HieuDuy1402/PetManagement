<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/dng"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dd"
        android:padding="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvBillKind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill"
                android:textColor="@color/dng"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvBillID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textColor="@color/dng"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="right">
            <ImageButton
                android:id="@+id/btnWatchBill"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_subject_24"
                android:background="@color/dng">
            </ImageButton>
            <ImageButton
                android:id="@+id/btnDeleteBill"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/dng"
                android:layout_marginLeft="2dp"
                android:src="@drawable/baseline_delete_24">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>